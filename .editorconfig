root = true

[*]
charset = utf-8
indent_style = space
indent_size = 2
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
max_line_length = 100

[*.java]
indent_size = 2
continuation_indent_size = 4
tab_width = 2

[*.groovy]
indent_size = 2
continuation_indent_size = 4
tab_width = 2

[*.xml]
indent_size = 2
continuation_indent_size = 4
tab_width = 2

[*.yml]
indent_size = 2
continuation_indent_size = 2
tab_width = 2

[*.yaml]
indent_size = 2
continuation_indent_size = 2
tab_width = 2
